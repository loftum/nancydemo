@inherits NancyRazorViewBase<NancyDemo.Areas.Areas.Admin.Models.LoginModel>

<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8" />
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <form action="login" method="POST" class="bullseye center-text">
            @Html.AntiForgeryToken()
            <div class="padded">
                <label>Username</label>
                <input type="text" id="Username" name="Username"/>
            </div>
            <div class="padded clear-both">
                <label class="float-left">***</label>
                <input type="password" id="Password" name="Password" class="float-right"/>
            </div>
            <div class="clear-both"></div>
            <div class="padded">
                <button type="submit" class="btn">Log in!</button>
            </div>
            <div style="height: 20px;"></div>
            <div class="center-text">
                <a href="/">...or go away</a>
            </div>
            
        </form>
        
    </body>
</html>